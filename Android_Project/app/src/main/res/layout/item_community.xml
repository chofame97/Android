<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_community_category"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:text="카테고리"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/tv_community_content"
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_community_name"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="닉네임"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="ㆍ"/>

            <TextView
                android:id="@+id/tv_community_location"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="현위치"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                />


            <TextView
                android:id="@+id/tv_community_time"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="200dp"
                android:text="1시간 전"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="#ccc"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_community_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/tv_community_like"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="공감하기"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="13dp"
                android:textAlignment="center"
                />

            <ImageView
                android:id="@+id/img_community_comments"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/tv_community_comments"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="댓글쓰기"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="13dp"
                android:textAlignment="center"
                />


            <ImageView
                android:id="@+id/img_community_cnt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/tv_community_cnt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:layout_marginTop="13dp"
                android:textAlignment="center"
                />




        </LinearLayout>




    </LinearLayout>





</LinearLayout>